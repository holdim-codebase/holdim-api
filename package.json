{
  "name": "holdim",
  "version": "1.0.0",
  "description": "holdim server",
  "main": "dist/index.js",
  "author": "Zhanybek Sadvakassov",
  "license": "MIT",
  "private": true,
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "build": "npx prisma generate && npm run build:gql && tsc",
    "start": "node ./dist/index.js",
    "lint": "eslint 'src/**/*.ts' -f codeframe",
    "build:gql": "graphql-codegen --config codegen.yml",
    "script:auth": "ts-node ./scripts/getAuthToken",
    "start:dev": "yarn run build && GOOGLE_APPLICATION_CREDENTIALS=`pwd`/local_secrets/fb_service_key.json yarn run start"
  },
  "dependencies": {
    "@graphql-codegen/cli": "^2.6.2",
    "@prisma/client": "^3.15.1",
    "apollo-server": "^3.9.0",
    "firebase-admin": "^11.0.0",
    "graphql": "^16.5.0",
    "lodash": "^4.17.21",
    "pino": "7.1.0",
    "prisma": "^3.15.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/typescript": "2.5.1",
    "@graphql-codegen/typescript-resolvers": "2.6.6",
    "@types/lodash": "^4.14.182",
    "@typescript-eslint/eslint-plugin": "5.27.0",
    "@typescript-eslint/parser": "5.27.0",
    "commander": "^9.3.0",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "firebase": "^9.8.4",
    "ts-node": "^10.8.1",
    "typescript": "^4.6.3"
  }
}
